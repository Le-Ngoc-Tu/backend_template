# ==================================
# BACKEND TEMPLATE ENVIRONMENT CONFIG
# ==================================

# Server Configuration
PORT=7010
NODE_ENV=development
BASE_URL=http://localhost

# Database Configuration (MySQL)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_database_password
DB_NAME=your_database_name
DB_PORT=3306

# JWT Security Keys (IMPORTANT: Change these in production!)
ACCESS_TOKEN_SECRET=your-super-secret-access-token-key-change-in-production
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-in-production
ACCESS_TOKEN_LIFETIME=15m
REFRESH_TOKEN_LIFETIME=7d

# CORS Configuration
# Use '*' for development, specify domains for production
ALLOWED_ORIGINS=*

# Security & Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=500

# File Upload Limits
JSON_LIMIT=10mb
URL_ENCODED_LIMIT=10mb
FILE_UPLOAD_LIMIT=50mb

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Database Sync Configuration
DB_SYNC_FORCE=false
DB_SYNC_ALTER=false

# Individual Table Sync Control (true/false)
SYNC_ROLES=true
SYNC_PERMISSIONS=true
SYNC_USERS=true
SYNC_AUTH=true
SYNC_LOGS=true
SYNC_UUID_LOGIN=true

